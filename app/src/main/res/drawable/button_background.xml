<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#7aa2f7"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#565f89"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#3b4261"
                android:endColor="#2e3440"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#565f89"/>
        </shape>
    </item>
</selector>
